<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-723" url="https://viecoi.vn/gioi-thieu-cong-ty/cong-ty-cong-ty-tnhh-quan-ly-tai-san-ky-thuat-aden-viet-nam-135858.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585370524043.56/warc/CC-MAIN-20200404134723-20200404164723-00506.warc.gz" offset="765348263" length="14900" response="200" mime-type="text/html">
