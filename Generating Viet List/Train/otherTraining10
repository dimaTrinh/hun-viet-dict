<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-723" url="http://viecoi.vn/gioi-thieu-cong-ty/cong-ty-cong-ty-cp-tap-doan-vinatop-147873.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585371886991.92/warc/CC-MAIN-20200410043735-20200410074235-00426.warc.gz" offset="179961707" length="14754" response="200" mime-type="text/html">
