<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-723" url="http://viecoi.vn/gioi-thieu-cong-ty/cong-ty-doanh-nghiep-ngoc-tra-147570.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585370505826.39/warc/CC-MAIN-20200401161832-20200401191832-00154.warc.gz" offset="185096912" length="15224" response="200" mime-type="text/html">
