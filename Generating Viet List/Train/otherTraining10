<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-724" url="http://viecoi.vn/viec-lam/nhan-vien-kinh-doanh-du-an-6901.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585370492125.18/warc/CC-MAIN-20200328164156-20200328194156-00200.warc.gz" offset="191621344" length="15879" response="200" mime-type="text/html">
