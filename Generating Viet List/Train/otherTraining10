<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-724" url="https://viecoi.vn/viec-lam/lai-xe-taxi-group-khong-yeu-cau-kinh-nghiem-duoc-dao-tao-tay-lai-909.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585370505550.17/warc/CC-MAIN-20200401065031-20200401095031-00104.warc.gz" offset="757416058" length="16914" response="200" mime-type="text/html">
