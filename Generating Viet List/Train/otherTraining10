<doc domain="viecoi.vn" index="domain-vn-CC-MAIN-2020-16-723" url="http://viecoi.vn/gioi-thieu-cong-ty/cong-ty-cong-ty-tnhh-giao-nhan-van-chuyen-dai-bang-xanh-149690.html" warc-file="crawl-data/CC-MAIN-2020-16/segments/1585371896913.98/warc/CC-MAIN-20200410110538-20200410141038-00225.warc.gz" offset="178496978" length="15291" response="200" mime-type="text/html">
